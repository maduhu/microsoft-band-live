<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pedometer_heading_text"
        style="@style/TextHeaderTheme"
        android:text="@string/pedometer_heading"/>

    <TextView
        android:id="@+id/pedometer_desc"
        style="@style/TextTheme"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pedometer_heading_text"
        android:text="@string/pedometer_desc"/>

    <TextView
        android:id="@+id/pedometer_data"
        style="@style/TextTheme"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pedometer_heading_text"/>

</RelativeLayout>