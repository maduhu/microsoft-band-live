<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="@dimen/button_padding"
        android:paddingRight="@dimen/button_padding"
        android:textAlignment="center"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/enable_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_text"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:padding="@dimen/button_padding"
        android:shadowColor="@color/colorPrimaryDark"
        android:textColor="@android:color/white"/>

    <ScrollView
        android:id="@+id/layout_band_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/enable_button"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/accelerometer_layout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/accelerometer_heading_text"
                style="@style/TextHeaderTheme"
                android:text="@string/accelerometer_heading"/>

            <TextView
                android:id="@+id/accelerometer_desc"
                style="@style/TextTheme"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/accelerometer_heading_text"
                android:text="Orientation"/>

            <TextView
                android:id="@+id/accelerometer_data"
                style="@style/TextTheme"
                android:layout_alignParentRight="true"
                android:layout_below="@id/accelerometer_heading_text"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
